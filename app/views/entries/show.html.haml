%h2.title
  = @entry.title
.date
  Created #{pretty_date(@entry.created_at)} #{pretty_time(@entry.created_at)}
.image
  = image_tag @entry.photo.url(:medium)

= form_for @label, :url => labels_url do |l|
  = l.label 'message', 'Your Caption:'
  = l.text_field :message
  = l.hidden_field :entry_id, :value => @entry.id
  = l.submit 'Enter'

#caption_container
  - @captions = Label.where(:entry_id => @entry.id).order("created_at  DESC")
  - @captions.each do |caption|
    .caption{:value => caption.id}
      = caption.message
      = pretty_date(caption.created_at)
      .vote
        .up-vote
          .arrow
            = image_tag 'up-vote.png'
          .count
            +#{caption.up_votes}
        .down-vote
          .arrow
            = image_tag 'down-vote.png'
          .count
            \-#{caption.down_votes}

= link_to "Recent Images", entries_index_path
