%h2.title
  = @entry.title
.date
  Created #{pretty_date(@entry.created_at)} #{pretty_time(@entry.created_at)}
.image
  = image_tag @entry.photo.url(:medium)

= form_for @label, :url => labels_url do |l|
  = l.label 'message', 'Your Caption:'
  = l.text_field :message
  = l.hidden_field :entry_id, :value => @entry.id
  = l.submit 'Enter'

#caption-container
  #sort-filter
    Sort By:
    = select_tag(:type, "<option value='created_at'>Date</option><option value='best_score'>Best Score</option><option value='up_votes'>Up-Votes</option><option value='down_votes'>Down-Votes</option>".html_safe)
  #captions-here
    = render "sort"

= link_to "Recent Images", entries_index_path
