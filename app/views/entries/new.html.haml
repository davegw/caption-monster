- body_id = 'new-entry'
%title
  Create Entry | Caption Monster

%h1
  CaPTioN MoNSTeR

%h2
  Create an Entry

.upload_form
  = form_for @entry, :url => entries_url, :html => {:class => "nifty_form", :multipart => true } do |f|
    .upload
      = f.label 'photo', 'Upload your photo:'
      .file
        = f.file_field :photo
    .title
      = f.label 'title', 'Title:'
      = f.text_field :title, :class => "form-control"
    .submit
      = f.submit "Create", :class => "btn btn-primary"
