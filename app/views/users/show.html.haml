- body_id = 'show-caption'
%title
  #{@user.name}'s Account | Caption Monster

#user_account
  %h2.name
    = @user.name
    %small
      = @user.email
  .activity
    %h4 
      Number of Entries: #{@user.entries.count}
      = link_to "View all", user_entries_path(@user.id)
    %h4
      Number of Captions:
      = @user.labels.count
      = link_to "View all", user_captions_path(@user.id) 
    