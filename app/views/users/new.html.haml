- body_id = 'sign-up'
%title
  Sign Up | Caption Monster

%h1 Sign Up

= form_for @user, :url => users_path do |u|
  - if @user.errors.any?
    .error-messages
      %h2 Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li 
            = message
  %p
    = u.label :name, "Username:"
    = u.text_field :name
  %p 
    = u.label :email, "Email:"
    = u.email_field :email
  %p
    = u.label :password, "Password:"
    = u.password_field :password
  %p
    = u.label :password_confirmation, "Confirm:"
    = u.password_field :password_confirmation
  %p
    = u.submit "Register"
