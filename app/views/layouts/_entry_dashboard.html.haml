#entry-index
  %table
    %tr
      %th
        ID
      %th
        Title
      %th
        Image
      %th
        Image Name
      %th
        Created At
    - @entries.each do |p|
      %tr.entry-row{:value => p.id}
        %td
          = p.id
        %td
          = p.title
        %td.thumbnail
          = image_tag p.photo.url(:thumb)
        %td
          - if p.photo_file_name
            = p.photo_file_name
          - else
            None
        %td
          = pretty_date(p.created_at)
          = pretty_time(p.created_at)
