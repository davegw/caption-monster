#caption-index
  %table.table.table-striped.table-hover
    %tr
      %th
        ID
      %th
        Image
      %th
        Caption
      %th
        Created At
    - @labels.each do |label|
      %tr.row-caption{:value => label.entry.id}
        %td
          = label.entry.id
        %td.photo
          = image_tag label.entry.photo.url(:medium)
        %td
          = label.message
        %td
          = pretty_date(label.created_at)
          = pretty_time(label.created_at)
